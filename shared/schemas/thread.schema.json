{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://email-assistant.com/schemas/thread.schema.json",
    "title": "EmailThread",
    "description": "Email thread with summary and analysis",
    "type": "object",
    "required": [
        "thread_id",
        "emails",
        "summary"
    ],
    "properties": {
        "thread_id": {
            "type": "string",
            "description": "Unique thread identifier"
        },
        "emails": {
            "type": "array",
            "items": {
                "$ref": "email.schema.json"
            },
            "description": "List of emails in this thread"
        },
        "summary": {
            "$ref": "analysis.schema.json",
            "description": "AI-generated thread summary"
        },
        "last_updated": {
            "type": "string",
            "format": "date-time",
            "description": "When the thread was last updated"
        }
    }
}